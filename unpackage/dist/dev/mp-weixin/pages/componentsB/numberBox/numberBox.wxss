.minus {
  width: 22px;
  height: 22px;
  border-width: 1px;
  border-color: #E6E6E6;
  border-top-left-radius: 100px;
  border-top-right-radius: 100px;
  border-bottom-left-radius: 100px;
  border-bottom-right-radius: 100px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.input {
  padding: 0 10px;
}
.plus {
  width: 22px;
  height: 22px;
  background-color: #FF0000;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}